{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
